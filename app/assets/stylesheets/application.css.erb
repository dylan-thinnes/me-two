/* a tag restyling */
a {
	color: inherit;
	cursor: pointer;
}
a::selection {
	background-color: transparent;
}

/* Default styles */
html {
	background-color: #eee;
}
body {
	width: 100vw;
	height: 100vh;
	font-family: monospace;
	color: #111;
	font-size: 14pt;
	position: relative;
	margin: -32pt auto 0 auto;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: stretch;
	line-height: 1.2;
	padding-bottom: 4pt;
}
* {
	overflow: hidden;
	box-sizing: border-box;
}

/* social tag styling */ 
#social {
	padding: 0.25ch 0 0.25ch 0;
	white-space: pre;
	max-width: 100%;
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	border-bottom: 1px solid #111;
	margin-bottom: 4pt;
}
#social > a {
	color: #111;
	text-decoration: none;
	margin: 0.25ch;
}
#social > a:hover, #social > a#highlight {
	filter: brightness(0.8);
}
#social > a:active {
	filter: brightness(0.6) !important;
}

/* a tags as list entries */
.entry {
    display: block;
    padding: 0.25ch;
    color: initial !important;
    text-decoration: none;
}
.entry:hover {
    background-color: #dedede;
}
.entry:active {
    background-color: #dbdbdb;
}

/* When body is open, what to do */
body.open {
    justify-content: flex-start;
    margin-top: 0px;
}
body.open > #content {
    flex-grow: 1;
}
body.open > #profile {
    height: 0px;
}
body.open > #spacer {
    flex-grow: 0;
}
body.open > #blurb {
    flex-grow: 0;
}

/* My name and associated blurb for front page */
#name {
	font-size: 1.25em;
	text-align: center;
	border-bottom: 1px solid #111;
	padding: 4pt 0 4pt 0;
}
#blurb {
	max-width: 700px;
	text-align: center;
	align-self: center;
	flex: 1 0 auto;
	height: 0;
	transition: flex-grow 0.5s ease-out 0s;
}

/* the spacer for front page alignment */
#spacer {
	flex: 1 0 auto;
	transition: flex-grow 0.5s ease-out 0s;
}

/* all content styling */
#content {
	flex: 0 0 auto;
	transition: flex-grow 0.5s ease-out 0s;
	position: relative;
	width: 100%;
	max-width: 700px;
	align-self: center;
	box-sizing: border-box;
}
.section {
	padding: 0 4pt 0 4pt;
	position: absolute;
	top: 0;
	left: 0;
	opacity: 0;
	width: 100%;
	height: 100%;
	flex: 0 0 auto;
	transition: opacity 0.5s ease-out 0s;
	z-index: 0;
	overflow-y: auto;
    border-width: 0 5px 0 5px;
    border-style: solid;
}
.section.selected {
    z-index: 1;
    opacity: 1;
}

