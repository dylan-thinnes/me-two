<%= render partial: "shared/section_colour", locals: { path: request.path, colour: colours[action_name.to_sym]} %>
<% if @article.nil? %>
    <h2>This article could not be found.</h2>
<% else %>
    <% set_title(@article.title) %>
    <%= to_markdown "###{@article.title}" %>
    <%= to_markdown "*#{@article.author}*" unless @article.author.nil? %>
    <%= to_markdown @article.content %>
<% end %>
