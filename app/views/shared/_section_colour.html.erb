<style>
<% path = request.path %>
<% colour = get_colour action_name %>
<% selector = raw(".section[data-url=\"#{path}\"]") %>
<%= selector %> {
    border-color: <%= colour %>;
}
<%= selector %> .text {
    color: <%= colour %>;
}
<%= selector %> h1, <%= selector %> h2, <%= selector %> h3, <%= selector %> h4, <%= selector %> h5, <%= selector %> h6 {
    color: <%= colour %>;
}
<%= selector %> h1, <%= selector %> h2 {
    border-bottom: 2px solid <%= colour %>;
}
<%= selector %> a {
    color: <%= colour %>;
}
</style>
